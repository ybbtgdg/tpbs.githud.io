<head>
    <meta charset="UTF-8">
    <title>电子时钟</title>
    <style>
        .box {
            width: 350px;
            height:350px;
            background-color: black;
            border: 5px solid #ccc;
			border-radius:175px;
            text-align: center;
            font-size: 28px;
            margin: 200px auto;
            color: #fff;
        }
        .box span {
            line-height: 210px;
        }
    </style>
</head>
<body>
    <div class="box">
        <span class="one"></span>
        <span class="two"></span>
    </div>
    <script>
        var timer = setTimeout(function() {
            var one = document.querySelector('.one');
            var two = document.querySelector('.two');
            var date = new Date();
            var year = date.getFullYear();
            var month = date.getMonth()+1;
            var dates = date.getDate();
            var arr = ['星期日', '星期一', '星期二', '星期三', '星期四', '星期五', '星期六', ];
            var day = arr[date.getDay()];
            one.innerHTML = (year + '年' + month + '月' + dates + '日 ' + day);
            two.innerHTML = (getTime());
            clearInterval(timer);
        });
        setInterval(function() {
            var one = document.querySelector('.one');
            var two = document.querySelector('.two');
            var date = new Date();
            var year = date.getFullYear();
            var month = date.getMonth() + 1;
            var dates = date.getDate();
            var arr = ['星期日', '星期一', '星期二', '星期三', '星期四', '星期五', '星期六', ];
            var day = arr[date.getDay()];
            one.innerHTML = (year + '年' + month + '月' + dates + '日 ' + day);
            two.innerHTML = (getTime());
        }, 1000);
        function getTime() {
            var time = new Date();
            var h = time.getHours();
            h = h < 10 ? '0' + h : h;
            var m = time.getMinutes();
            m = m < 10 ? '0' + m : m;
            var s = time.getSeconds();
            s = s < 10 ? '0' + s : s;
            return h + ':' + m + ':' + s;
        }
    </script>
</body>
</html>
